import java.util.Scanner;

public class LetterInventory {
    public static void main(String[] args) {
        Scanner inputScanner = new Scanner(System.in);
            System.out.println("Enter some text:");
            
            String userInput = inputScanner.nextLine(); // Get user input
            int[] counts = new int[26]; // Initialize the counts array
            userInput = userInput.toUpperCase(); // Convert to uppercase

            // Count letters
            for (int i = 0; i < userInput.length(); i++) {
                char currentChar = userInput.charAt(i);
                if (currentChar >= 'A' && currentChar <= 'Z') { // Check if it's a letter
                    int index = currentChar - 'A'; // Get the index for the letter
                    counts[index]++; // Increase the count for this letter
                }
            }

            // Display letter counts
            System.out.println("Letter Counts:");
            for (int i = 0; i < counts.length; i++) {
                char letter = (char) (i + 'A'); // Convert index back to a letter
                System.out.println(letter + ": " + counts[i]); // Print the letter and its count
            }
        }
    }
